#!/bin/bash

usage() {
    printf "Usage: picomutil <toggle|start>\n"
    exit 1
}

kill() {
    killall -q picom
    #killall -q flashfocus
}

start() {
    picom --config /home/$(whoami)/.config/herbstluftwm/picom.conf &
    #flashfocus -t 250 -o 0.5 -l always --no-flash-fullscreen &
}

if [[ ! $1 ]]; then
    usage
fi

case $1 in
    start)
        kill
        start
        ;;

    toggle)
        if pgrep -x picom > /dev/null; then
            kill
        else
            start
        fi
        ;;

    *)
        usage
        ;;
esac
